#!/bin/bash

# 左边列出 ~/.local/bin 下的文件名（不含路径）
FILES=(~/.local/bin/*)
FILENAMES=()
for f in "${FILES[@]}"; do
  FILENAMES+=("$(basename "$f")")
done

# 调用 fzf
SELECTED=$(
  printf "%s\n" "${FILENAMES[@]}" | fzf \
    --layout=reverse \
    --ansi \
    --preview "cat ~/.local/bin/{}" \
    --preview-window=right:80%,wrap
)

# 输出选择
if [[ -n "$SELECTED" ]]; then
  echo "你选中了: $SELECTED"
fi
